<h1><%= @restaurant.name %></h1>

<ul>
  <li><%= @restaurant.address %></li>
  <li><%= @restaurant.phone_number %></li>
  <li><%= @restaurant.category %></li>
</ul>

<%= link_to "update", edit_restaurant_path %><br>
<%= link_to "back to restaurants", restaurants_path %><br>
<%= link_to "Delete restaurant",
  restaurant_path(@restaurant),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<%= link_to "New Review", new_restaurant_review_path(@restaurant) %>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %> -- <%= review.rating %> </li>
    <li><%= link_to "Delete review", review_path(review) ,data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
  <% end %>
</ul>
<br>
